generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int         @id @default(autoincrement())
  name         String
  description  String
  brand        String
  stock        Boolean     @default(true)
  images       Image[]
  price        Float
  properties   Properties? @relation(fields: [propertiesId], references: [id])
  order        Order?      @relation(fields: [orderId], references: [id])
  orderId      Int?
  propertiesId Int?
}

model Order {
  id            Int       @id @default(autoincrement())
  items         Product[]
  username      String
  email         String
  city          String
  postalCode    String
  streetAddress String
  province      String
  phonenumber   Int
  paid          Boolean
  createdAt     DateTime  @default(now())
}

model Properties {
  id      Int       @id @default(autoincrement())
  color   Color[]
  storage Storage[]
  product Product[]
}

model Color {
  id           Int        @id @default(autoincrement())
  colorName    String     @unique
  propertiesId Int
  properties   Properties @relation(fields: [propertiesId], references: [id])
}

model Storage {
  id           Int        @id @default(autoincrement())
  total        Int        @unique
  prefix       String
  propertiesId Int
  Properties   Properties @relation(fields: [propertiesId], references: [id])
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}
